<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	   http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	   
	   <context:component-scan base-package="br.com.bjbl.frameworks.rmi.server" />
	   
	   <bean id="mathService" class="br.com.bjbl.frameworks.rmi.server.math.MathServices" />
	   
	   <bean class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
	   	<property name="Location" value="conf/frameworks-rmi-server-conf.properties" />
	   </bean>
	   
	   <bean name="remoteServiceBean" class="org.springframework.remoting.rmi.RmiServiceExporter">
	   		<property name="serviceName" value="math-service" />
	   		<property name="service" ref="mathService" />
	   		<property name="serviceInterface" value="br.com.bjbl.frameworks.rmi.utils.services.interfaces.IMathServices"/>
	   		<property name="registryPort" value="${remote.service.rmi.port}"/>
	   </bean>
</beans>